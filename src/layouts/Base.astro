---
export interface Props {
  title?: string
}
const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="https://rschubkegel.com/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={ Astro.generator } />
    <title>{ title ?? 'Astro' }</title>
    <slot name="head" />
  </head>
  <body>
    <slot />
    <style is:global>
      body {
        grid-template-columns: 1fr min(52rem, 90%) 1fr !important;
      }
      ul {
        padding-left: 1.25rem;
      }
      ul.emoji {
        list-style: none;
        padding-left: .5rem;
      }
      @media (max-width: 450px) {
        html {
          font-size: 14px;
        }
      }
      @media (max-width: 380px) {
        html {
          font-size: 13px;
        }
      }
    </style>
  </body>
</html>
