    <section>
      <h4>random</h4>
      <pre>
        <code data-trim data-noescape class="language-python">
          import random

          # 0.0 - 1.0
          random.random()

          # 1 - 10
          random.randint(1, 10)

          # "Nash" or "Kylan"
          random.choice(['Nash', 'Kylan'])
        </code>
      </pre>
    </section>

    <section>
      <h4>math</h4>
      <pre>
        <code data-trim data-noescape class="language-python">
          import math

          # 3.141592653589793
          math.pi

          # 256.0
          math.pow(2, 8)

          # 4.0
          math.sqrt(16)
        </code>
      </pre>
    </section>

    <section>
      <h4>datetime</h4>
      <pre>
        <code data-trim data-noescape class="language-python">
          import datetime

          now = datetime.datetime.now()

          # 2024
          now.year

          # 10
          now.month

          # 10
          now.day
        </code>
      </pre>
    </section>
